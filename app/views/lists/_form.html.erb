<div class="full">
<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="fields">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "list name" %>
    <%# f.hidden_field :user_id, :value => 1 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "myButton" %>
  </div>
  </div>
<% end %>

</div>