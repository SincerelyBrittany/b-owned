<h1><%if current_user %> Hello <%= current_user.username.capitalize %>, <%end%> Search for a company</h1>

<%= form_tag companies_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>



<ul>
<% @companies.each do |company| %>
  <li><%= link_to company.title, company %></li>
<% end %>
</ul>